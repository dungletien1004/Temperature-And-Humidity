<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.historyactivity.LookUpDateFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="80dp"
        android:background="#C0F9FA"
        android:orientation="vertical">


        <Button
            android:id="@+id/date1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Thứ 2,ngày 26,tháng 4,2021"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#88CEFB" />

        <Button
            android:id="@+id/date2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Thứ 3,ngày 27,tháng 4,2021"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#88CEFB" />

        <Button
            android:id="@+id/date3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Thứ 4,ngày 28,tháng 4,2021"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#88CEFB" />

        <Button
            android:id="@+id/date4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Thứ 5,ngày 29,tháng 4,2021"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#88CEFB" />
        <Button
            android:id="@+id/date5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Thứ 6,ngày 30,tháng 4,2021"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#88CEFB" />
        <Button
            android:id="@+id/date6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Thứ 7,ngày 1,tháng 5,2021"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#88CEFB" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_Text_choose"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Chọn ngày để tra cứu"
        android:textSize="25sp"
        android:textStyle="normal|bold" />


</RelativeLayout>